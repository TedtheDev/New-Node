*
  box-sizing: border-box
//all columns
[class*="col-"]
  width: 100%
  border: 1px solid red
  float: left
  padding: 15px
//mobile
[class*="col-"]
  width: 100%
//desktop width
@media only screen and (min-width: 768px)
  .col-1
    width: 8.33%
  .col-2
    width: 16.66%
  .col-3
    width: 25%
  .col-4
    width: 33.33%
  .col-5
    width: 41.66%
  .col-6
    width: 50%
  .col-7
    width: 58.33%
  .col-8
    width: 66.66%
  .col-9
    width: 75%
  .col-10
    width: 83.33%
  .col-11
    width: 91.66%
  .col-12
    width: 100%

//set rows
.row::after
  content: ""
  clear: both
  display: block

.container
  //width: 100%
  height: 100%
  background-color: #e6f7ff
  //position: fixed
  //clear: both

.header
  //width: 100%
  height: 12%
  background-color: #007ab3
  clear: both

.header-text
  font-size: 8vh

.nav
  height: 100%
  //float:left
  overflow: auto
  align: center

.nav-link
  background-color: #66ccff
  margin: 4% auto 4% auto
  padding: 4%
  width: 50%
  height: 100%
  cursor: pointer
  -webkit-transition: width 1s
  transition: width 1s
  -webkit-transition-timing-function: cubic-bezier(0,0,0,1)
  transition-timing-function: cubic-bezier(0,0,0,1)
  border-radius: 100px
  text-align: center
  font-size: 125%

.nav-link:hover
  width: 100%

.content
  height: 100%
  //float: left
//  overflow: auto

.footer
  background-color: #007ab3
  //width: 100%
  height: 8%
  clear: both
