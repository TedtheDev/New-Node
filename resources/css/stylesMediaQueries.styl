@media only screen and (min-width: 768px)
  .col-0
    width: 0px
  .col-1
    width: 8.33%
  .col-2
    width: 16.66%
  .col-3
    width: 25%
  .col-4
    width: 33.33%
  .col-5
    width: 41.66%
  .col-6
    width: 50%
  .col-7
    width: 58.33%
  .col-8
    width: 66.66%
  .col-9
    width: 75%
  .col-10
    width: 83.33%
  .col-11
    width: 91.66%
  .col-12
    width: 100%
  html, body
    overflow: hidden
  .nav-links-section
    display: inline
  .nav-drop-down-section
    display: none
  .nav
    //overflow: auto


  @keyframes fadeInNavButtons {
    0% { opacity: 0 }
    100% { opacity: 1 }
  }

  .header-nav-button
    width: 100%
    height: 100%
    opacity: 0
    pointer-events: auto
    border-radius: 10px
    margin-right: 1%
    margin-left: 1%
    animation: fadeInNavButtons 1s linear
    animation-delay: 1.5s
    animation-fill-mode: forwards
    transition: width 100ms linear
    &:hover
      cursor: pointer
      width: 0
      box-shadow: 0px 2px blue

  .header-nav-button-container
    display: inline-block
    width: calc(100%/6)
    height: 100%
    position: absolute
    &:nth-child(1)
      left: 0
    &:nth-child(2)
      left: 20%
    &:nth-child(3)
      left: 40%
    &:nth-child(4)
      left: 60%
    &:nth-child(5)
      left: 80%

  .contact-info
    opacity: 1
  .contact-info-mobile
    opacity: 0
