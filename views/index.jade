doctype html
html(lang="en-US")
  head
    title Ted's Website
    //- Load AngularJS
    script(src='/node_modules/angular/angular.min.js')

    //- Load CSS from css folder
    link(href='./css/styles.css', rel='stylesheet')
  body(ng-app="myApp")
    div(class="container")
      header(class="header")
        | header
      aside(class="left-nav")
        | left nav
      div(class="content")
        | content
      footer(class="footer")
        | footer

    //- Modules
    script(src="/angularjs/app.js")

    //- Controllers
    script(src="/angularjs/myControllers.js")
