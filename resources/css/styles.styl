//mixins
width-transition-seconds(sec)
  -webkit-transition: width sec
  transition: width sec
transition-timing-cybic-bezier(n1,n2,n3,n4)
  -webkit-transition-timing-function: cubic-bezier(n1,n2,n3,n4)
  transition-timing-function: cubic-bezier(n1,n2,n3,n4)
nav-menu-mobile-transition(sec)
  -webkit-transition: sec linear all
  transition: sec lindear all
placeHeaderNavButtons()
  for num in 1 2 3 4 5
    header-nav-button:nth-child(num)
      if num == 1
        left: 0
      if num == 2
        left: 20%
      if num == 3
        left: 40%
      if num == 4
        left: 60%
      if num == 5
        left: 80%

//css
html, body
  height: 100%
  width: 100%
  margin: 0
  padding: 0

*
  box-sizing: border-box

//all columns
[class*="col-"]
  width: 100%
  //border: 1px solid red
  float: left
  padding: 15px
//mobile
[class*="col-"]
  width: 100%

//set rows
.row::after
  content: ""
  clear: both
  display: block

.container
  height: 100%
  background-color: #ecf0f1
  overflow-x: auto

@keyframes transitionInHeaderOnLoad {
  0%   { transform: translateY(-100%) }
  100% { transform: translateY(0%) }
}

.header
  width: 100%
  height: 25%
  background-color: #8e44ad
  clear: both
  position: relative
  animation: 1s transitionInHeaderOnLoad

.header-text
  font-size: 28px
  color: #ecf0f1
  margin: 0 auto
  text-align: center

@keyframes slideInHeaderNavOnLoad {
  0%   { transform: translateX(-100%) }
  100% { transform: translateX(0%) }
}

.nav
  width: 100%
  height: 50%

.header-nav
  width: 100%
  height: 50%
  text-align: center
  //position: absolute
  bottom: 0%
  left: 0
  transform: translateX(-100%)
  background-color: #d5b6e2
  animation: 1s slideInHeaderNavOnLoad
  animation-delay: 500ms
  animation-fill-mode: forwards

.header-bar
  background-color: #000;
  width: 100%;
  height: 25%;
  //position: relative;
  z-index: -1;
  top: 60%;

.header-nav-button
  //display: inline-block
  //width: 0
  //height: 0
  opacity: 0
  border: 4px solid #000
  border-radius: 3px
  background-color: #8e44ad
  color: #ecf0f1
  text-align: center
  pointer-events: none

.header-nav-button.active
  background-color: blue

.nav-links-section
  display: none

.nav-link
  display: inline-block
  color: #ecf0f1
  background-color: #8e44ad
  margin: 4% auto 4% auto
  padding: 4%
  width: 50%
  min-width: 120px
  height: 40px
  font-size: 150%
  line-height: 50%
  cursor: pointer
  width-transition-seconds(.5s)
  transition-timing-cybic-bezier(0,0,0,1)
  border-radius: 100px
  text-align: center
  vertical-align: middle
  border: 4px solid black;
  &:hover
    width: 100%

.nav-drop-down-section

.nav-drop-down-select
  width: 100%

.nav-menu-mobile-toggle, .nav-menu-mobile-toggle-open
  width: 50px
  height: 40px
  position: relative
  margin: 0px 0px 0px auto
  transform: rotate(0deg);
  transition .5s ease-in-out
  cursor: pointer
  border: 3px solid #8e44ad
  border-radius: 5px

.nav-menu-mobile-toggle span, .nav-menu-mobile-toggle-open span
  display: block
  opacity: 1
  left: 0
  background-color: #8e44ad
  position: absolute
  width: 90%
  border-radius: 10px
  height: 6px
  text-indent: 100%
  white-space: nowrap
  overflow: hidden
  transform: rotate(0deg);
  transition .25s ease-in-out

.nav-menu-mobile-toggle span:nth-child(1)
  top: 5px
  left: 2px

.nav-menu-mobile-toggle span:nth-child(2)
  top: 15px
  left: 2px

.nav-menu-mobile-toggle span:nth-child(3)
  top: 25px
  left: 2px

//-------
.nav-menu-mobile-toggle-open span:nth-child(1)
  top: 15px
  transform: rotate(135deg);

.nav-menu-mobile-toggle-open span:nth-child(2)
  opacity: 0
  left: 250px
  top: 10px

.nav-menu-mobile-toggle-open span:nth-child(3)
  top: 15px
  transform: rotate(-135deg);

.nav-menu-mobile
  width: 100%
  background-color: yellow

.nav-menu-mobile.ng-enter
  nav-menu-mobile-transition(.25s)
  opacity: 0

.nav-menu-mobile.ng-enter.ng-enter-active
  opacity: 1

.nav-menu-mobile.ng-leave
  nav-menu-mobile-transition(.25s)
  opacity: 1

.nav-menu-mobile.ng-leave.ng-leave-active
  opacity: 0

@keyframes moveLine {
  to { stroke-dashoffset: 25}
}

#ham-line-one
  stroke-dasharray: 15
  animation: moveLine 2s linear forward

.hamburger-menu:hover
  cursor: pointer

.portfolio-full
  height: 100%

.project-content
  overflow-x: auto
  height: 100%
  text-align: center

@keyframes fadeIn {
  0% {opacity: 0}
  100% {opacity: 1}
}

@keyframes slideUpContentOnLoad {
  0%   { transform: translateY(105%) }
  100% { transform: translateY(0%) }
}

.content
  height: 100%
  word-wrap: break-word
  overflow: auto
  text-align: center

.content-box
  height: 100%
  //overflow: hidden
  transform: translateY(105%)
  animation: 1s slideUpContentOnLoad
  animation-delay: 1s
  animation-fill-mode: forwards

.project-button
  display: inline
  margin: 1% 1% 1% 1%
  &:hover
    cursor: pointer
  background-color: #66ccff
  padding: 1%
  margin: 1%

.project-menu-holder
  margin: 0 auto

.project-menu-closed, .project-menu-open
  background-color: #8e44ad
  color: #ecf0f1
  text-align: center
  width: 50%
  min-width: 235px
  height: 32px
  margin: 0 auto
  font-size: 22px
  border: 1px solid #000
  border-radius: 10px
  cursor: pointer

.project-menu-open
  transition: 300ms linear all

.project-menu-closed
  transition: 300ms linear all

.project-menu-open
  border-bottom-left-radius: 0px;
  border-bottom-right-radius: 0px;

@keyframes animateBorder {
  0% { background-size: 0 0, 100% 100% }
  33% { background-size: 100% 0, 100% 100% }
  66% { background-size: 100% 98%, 100% 100% }
  100% { background-size: 100% 98%, 0 2px }
}

@keyframes animateBorderReverse {
  0% { background-size: 100% 98%, 0 2px }
  33% { background-size: 100% 98%, 100% 100% }
  66% { background-size: 100% 0, 100% 100% }
  100% { background-size: 0 0, 100% 100%}
}

.project-menu-nav-open, .project-menu-nav-close
  width: 50%
  min-width: 235px
  margin: 0 auto
  text-align: center
  padding: 0 3px 3px 3px
  background-color: #000
  background-image:
    url('data:image/gif;base64,R0lGODlhAQABAPAAAAAAAP///yH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=='),
    url('data:image/gif;base64,R0lGODlhAQABAPAAAOzw8f///yH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==')
  background-repeat: no-repeat
  background-position: top center, bottom center
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;

.project-menu-nav-open
  background-size: 0 100%, 0% 2px
  animation: animateBorder 500ms

.project-menu-nav-close
  background-size: 0 100%, 100% 100%
  animation: animateBorderReverse 500ms

.project-menu-nav-content
  background-color: #ecf0f1
  padding: 2px
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;

// leaving ng-scope project-menu-nav-open ng-animate ng-leave ng-leave-active
//entering ng-scope project-menu-nav-open-add ng-animate project-menu-nav-open ng-enter ng-project-menu-nav-open-add ng-enter-active ng-project-menu-nav-open-add-active project-menu-nav-open-add-active
.project-menu-nav-open.ng-enter, .project-menu-nav-close.ng-enter
  transition: 500ms ease-in
  opacity: 0

.project-menu-nav-open.ng-enter.ng-enter-active, .project-menu-nav-close.ng-enter.ng-enter-active
  opacity: 1

.project-menu-nav-open.ng-leave, .project-menu-nav-close.ng-leave
  transition: 500ms ease-in
  opacity: 1

.project-menu-nav-open.ng-leave.ng-leave-active, .project-menu-nav-close.ng-leave.ng-leave-active
  opacity: 0

.project-menu-button
  margin: 2%
  background-color: #d9b3ff
  &:hover
    cursor: pointer

.contact-info
  opacity: 0

.contact-info-mobile
  opacity: 1

@keyframes animateOpen {
  to { stroke-dashoffset: 0 }
}

@keyframes animateClose {
  to { stroke-dashoffset: 600 }
}

.svg-animate-path-open
  stroke-dasharray: 600
  stroke-dashoffset: 600
  animation: animateOpen 1s linear
  animation-fill-mode: forwards

.svg-animate-path-close
  stroke-dasharray: 600
  stroke-dashoffset: 0
  animation: animateClose 1s linear
  animation-fill-mode: forwards

