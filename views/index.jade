doctype html
html(lang="en-US")
  head
    title Tyler Edmunds - Ted
    //- Load AngularJS
    script(src='/node_modules/angular/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.js' type='text/javascript')

    //- Load CSS from css folder
    link(href='./css/styles.css', rel='stylesheet')
  body(ng-app="myApp")
    div(class="container")
      header(class="header")
        span(class="header-text") Tyler Edmunds
      div(class="row" ng-controller="getContentViews")
        div(class="col-4 nav" )
          button(class="nav-link" display='block' ng-click="homeView()") Home
          button(class="nav-link" ng-click="aboutMeView()") About
          div(class="nav-link") Portfolio
          div(class="nav-link") Contact
        div(class="col-8 content").
          {{ serveContent }}
      footer(class="footer")
        | footer

    //- Modules
    script(src="/angularjs/app.js")

    //- Controllers
    script(src="/angularjs/myControllers.js")
