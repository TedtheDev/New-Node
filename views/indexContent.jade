    div(class="row")
      nav(class='col-12 header-nav')
        //div(class='header-bar')
        div(class='header-nav-button-container')
          div( id='homeNav' ui-sref="home" ng-class="headerNavButtonHome" ng-click="addActiveLinkClass('home')") 
            span Home
        div(class='header-nav-button-container')
          div( id='aboutNav' ui-sref="about" ng-class="headerNavButtonAbout" ng-click="addActiveLinkClass('about')") 
            span About
