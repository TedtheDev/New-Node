doctype html
html(lang="en-US")
  head
    title Tyler Edmunds - Ted
    //- Load AngularJS
    script(src='node_modules/angular/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.js' type='text/javascript')
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.js" type='text/javascript')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js' type='text/javascript')
    script(src="node_modules/angular-fullpage.js/angular-fullpage.js")
    
    meta(name="viewport" content="width=device-width, initial-scale=1")
    //- Load CSS from css folder
    link(href='./css/styles.css', rel='stylesheet')
  body(ng-app="myApp")
    div(class="container")
      header(class="header")
        span(class="header-text") Tyler Edmunds
      div(class="row content-box" ng-controller="getTemplate")
        nav(class="col-2 nav")
          div(class="nav-drop-down-section") 
            span(class-="nav-menu-mobile-toggle" ng-click='toggleMobileNav=!toggleMobileNav')
            //select(class="nav-drop-down-select" ng-model="selectedNavLink" ng-options="navOption for navOption in navOptions" ng-change="loadTemplateOnChange(selectedNavLink)")
            div(ng-class="navMenuClass" ng-click='toggleMobileNav=!toggleMobileNav; changeClass(navMenuClass)')
              span hamburger top
              span hamber mid
              span hamburger bot
              //svg(class="hamburger-menu" width="50%" height="30") Sorry, your browser does not support inline SVG.
                //path(id="ham-line-one" d="M 0 4 L 40 4" stroke="rgb(100,100,100)" stroke-width="4" fill="none")
                //path(id="ham-line-two" d="M 0 15 L 40 15" stroke="rgb(100,100,100)" stroke-width="4" fill="none")
                //path(id="ham-line-three" d="M 0 26 L 40 26" stroke="rgb(100,100,100)" stroke-width="4" fill="none")
            div(class='nav-menu-mobile' ng-if='toggleMobileNav')
              div(class="nav-test" ng-click="loadTemplate('home'); toggleMobileNav=!toggleMobileNav") Home
              div(class="nav-test" ng-click="loadTemplate('about'); toggleMobileNav=!toggleMobileNav") About
              div(class="nav-test" ng-click="loadTemplate('portfolio'); toggleMobileNav=!toggleMobileNav") Portfolio
              div(class="nav-test" ng-click="loadTemplate('github'); toggleMobileNav=!toggleMobileNav") GitHub
              div(class="nav-test" ng-click="loadTemplate('contact'); toggleMobileNav=!toggleMobileNav") Contact
          div(class="nav-links-section")
            div(class="nav-link" ng-click="loadTemplate('home')") Home
            div(class="nav-link" ng-click="loadTemplate('about')") About
            div(class="nav-link" ng-click="loadTemplate('portfolio')") Portfolio
            div(class="nav-link" ng-click="loadTemplate('github')") GitHub
            div(class="nav-link" ng-click="loadTemplate('contact')") Contact
        div(class="col-10 content" ng-init="loadTemplate('home')" ng-include="serveContent")

    //- Modules
    script(src="/angularjs/app.js")

    //- Controllers
    script(src="/angularjs/myControllers.js")
