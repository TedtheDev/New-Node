doctype html
html(lang="en-US")
  head
    title Tyler Edmunds - Ted
    //- Load AngularJS
    script(src='/node_modules/angular/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.js' type='text/javascript')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular-sanitize.js' type='text/javascript')

    //- Load CSS from css folder
    link(href='./css/styles.css', rel='stylesheet')
  body(ng-app="myApp")
    div(class="container")
      header(class="header")
        span(class="header-text") Tyler Edmunds
      div(class="row" ng-controller="getContentViews")
        nav(class="col-2 nav")
          div(class="nav-link" ng-click="homeView()") Home
          div(class="nav-link" ng-click="aboutMeView()") About
          div(class="nav-link" ng-click="portfolioView()") Portfolio
          div(class="nav-link") Contact
        div(class="col-10 content" ng-init="homeView()" ng-bind-html="serveContent")
      footer(class="footer")
        | footer

    //- Modules
    script(src="/angularjs/app.js")

    //- Controllers
    script(src="/angularjs/myControllers.js")
