doctype html
html(lang="en-US")
  head
    title Tyler Edmunds - Ted
    //- Load AngularJS
    script(src='node_modules/angular/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.js' type='text/javascript')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js' type='text/javascript')
    
    meta(name="viewport" content="width=device-width, initial-scale=1")
    //- Load CSS from css folder
    link(href='./css/styles.css', rel='stylesheet')
  body(ng-app="myApp")
    div(class="container")
      header(class="header")
        span(class="header-text") Tyler Edmunds
      div(class="row content-box" ng-controller="getTemplate")
        nav(class="col-2 nav")
          div(class="nav-drop-down-section")
            select(class="nav-drop-down-select" ng-model="selectedNavLink" ng-options="navOption for navOption in navOptions" ng-change="loadTemplateOnChange(selectedNavLink)")
          div(class="nav-links-section")
            div(class="nav-link" ng-click="loadTemplate('home')") Home
            div(class="nav-link" ng-click="loadTemplate('about')") About
            div(class="nav-link" ng-click="loadTemplate('portfolio')") Portfolio
            div(class="nav-link" ng-click="loadTemplate('github')") GitHub
            div(class="nav-link" ng-click="loadTemplate('contact')") Contact
        div(class="col-10 content" ng-init="loadTemplate('home')" ng-include="serveContent")
      footer(class="footer")

    //- Modules
    script(src="/angularjs/app.js")

    //- Controllers
    script(src="/angularjs/myControllers.js")
