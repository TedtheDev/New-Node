//mixins
width-transition-seconds(sec)
  -webkit-transition: width sec
  transition: width sec
transition-timing-cybic-bezier(n1,n2,n3,n4)
  -webkit-transition-timing-function: cubic-bezier(n1,n2,n3,n4)
  transition-timing-function: cubic-bezier(n1,n2,n3,n4)

//css
html, body
  height: 100%
  width: 100%

*
  box-sizing: border-box
//all columns
[class*="col-"]
  width: 100%
  border: 1px solid red
  float: left
  padding: 15px
//mobile
[class*="col-"]
  width: 100%
//desktop width
@media only screen and (min-width: 768px)
  .col-1
    width: 8.33%
  .col-2
    width: 16.66%
  .col-3
    width: 25%
  .col-4
    width: 33.33%
  .col-5
    width: 41.66%
  .col-6
    width: 50%
  .col-7
    width: 58.33%
  .col-8
    width: 66.66%
  .col-9
    width: 75%
  .col-10
    width: 83.33%
  .col-11
    width: 91.66%
  .col-12
    width: 100%
  html, body
    overflow: hidden

//set rows
.row::after
  content: ""
  clear: both
  display: block

.container
  height: 100%
  background-color: #e6f7ff

.header
  //width: 100%
  height: 15%
  background-color: #007ab3
  clear: both

.header-text
  font-size: 8vh

.nav
  height: 100%
  align: center
  overflow: auto

.nav-link
  background-color: #66ccff
  margin: 4% auto 4% auto
  padding: 4%
  width: 50%
  min-width: 100px
  height: 40px
  line-height: 50%
  cursor: pointer
  width-transition-seconds(1s)
  transition-timing-cybic-bezier(0,0,0,1)
  border-radius: 100px
  text-align: center
  vertical-align: middle
  border: 4px solid black;
  &:hover
    width: 100%



.portfolio-full
  height: 100%

.project-content
  overflow-x: auto
  height: 90%

.content
  height: 100%

.content-box
  height: 80%

.project-button
  display: inline
  margin: 1% 1% 1% 1%
  &:hover
    cursor: pointer
  background-color: #66ccff
  padding: 1%
  margin: 1%

.footer
  background-color: #007ab3
  //width: 100%
  height: 15%
  clear: both
