//mixins
width-transition-seconds(sec)
  -webkit-transition: width sec
  transition: width sec
transition-timing-cybic-bezier(n1,n2,n3,n4)
  -webkit-transition-timing-function: cubic-bezier(n1,n2,n3,n4)
  transition-timing-function: cubic-bezier(n1,n2,n3,n4)
nav-menu-mobile-transition(sec)
  -webkit-transition: sec linear all
  transition: sec lindear all

//css
html, body
  height: 100%
  width: 100%
  margin: 0
  padding: 0

*
  box-sizing: border-box

//all columns
[class*="col-"]
  width: 100%
  border: 1px solid red
  float: left
  padding: 15px
//mobile
[class*="col-"]
  width: 100%


//set rows
.row::after
  content: ""
  clear: both
  display: block

.container
  height: 100%
  background-color: #ecf0f1
  overflow: auto

.header
  width: 100%
  height: 15%
  background-color: #8e44ad
  clear: both

.header-text
  font-size: 8vh
  color: #ecf0f1

.nav-links-section
  display: none

.nav-link
  color: #ecf0f1
  background-color: #8e44ad
  margin: 4% auto 4% auto
  padding: 4%
  width: 50%
  min-width: 100px
  height: 40px
  line-height: 50%
  cursor: pointer
  width-transition-seconds(.5s)
  transition-timing-cybic-bezier(0,0,0,1)
  border-radius: 100px
  text-align: center
  vertical-align: middle
  border: 4px solid black;
  &:hover
    width: 100%

.nav-drop-down-section
  width: 100%

.nav-drop-down-select
  width: 100%

@keyframes spinHamburger {


}

.nav-menu-mobile-toggle, .nav-menu-mobile-toggle-open
  width: 50px
  height: 40px
  position: relative
  margin: 0px auto 0px 0px
  transform: rotate(0deg);
  transition .5s ease-in-out
  cursor: pointer
  border: 3px solid #8e44ad
  border-radius: 5px

.nav-menu-mobile-toggle span, .nav-menu-mobile-toggle-open span
  display: block
  opacity: 1
  left: 0
  background-color: #8e44ad
  position: absolute
  width: 90%
  border-radius: 10px
  height: 6px
  text-indent: 100%
  white-space: nowrap
  overflow: hidden
  transform: rotate(0deg);
  transition .25s ease-in-out

.nav-menu-mobile-toggle span:nth-child(1)
  top: 5px

.nav-menu-mobile-toggle span:nth-child(2)
  top: 15px

.nav-menu-mobile-toggle span:nth-child(3)
  top: 25px

//-------
.nav-menu-mobile-toggle-open span:nth-child(1)
  top: 15px
  transform: rotate(135deg);

.nav-menu-mobile-toggle-open span:nth-child(2)
  opacity: 0
  left: 250px
  top: 10px

.nav-menu-mobile-toggle-open span:nth-child(3)
  top: 15px
  transform: rotate(-135deg);

.nav-menu-mobile
  width: 100%
  background-color: yellow

.nav-menu-mobile.ng-enter
  nav-menu-mobile-transition(.25s)
  opacity: 0

.nav-menu-mobile.ng-enter.ng-enter-active
  opacity: 1

.nav-menu-mobile.ng-leave
  nav-menu-mobile-transition(.25s)
  opacity: 1

.nav-menu-mobile.ng-leave.ng-leave-active
  opacity: 0

@keyframes moveLine {
  to { stroke-dashoffset: 25}
}

#ham-line-one
  stroke-dasharray: 15
  animation: moveLine 2s linear forward

.hamburger-menu:hover
