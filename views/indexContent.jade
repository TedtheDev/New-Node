          div(id='portfolioNav' ui-sref="portfolio" ng-class="headerNavButtonPortfolio" ng-click="addActiveLinkClass('portfolio')") 
            span Portfolio
        div(class='header-nav-button-container')
          div(id='githubNav' ui-sref="github" ng-class="headerNavButtonGithub" ng-click="addActiveLinkClass('github')") 
            span GitHub
