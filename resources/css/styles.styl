//mixins
width-transition-seconds(sec)
  -webkit-transition: width sec
  transition: width sec
transition-timing-cybic-bezier(n1,n2,n3,n4)
  -webkit-transition-timing-function: cubic-bezier(n1,n2,n3,n4)
  transition-timing-function: cubic-bezier(n1,n2,n3,n4)
nav-menu-mobile-transition(sec)
  -webkit-transition: sec linear all
  transition: sec lindear all

//css
html, body
  height: 100%
  width: 100%

*
  box-sizing: border-box
//all columns
[class*="col-"]
  width: 100%
  border: 1px solid red
  float: left
  padding: 15px
//mobile
[class*="col-"]
  width: 100%


//set rows
.row::after
  content: ""
  clear: both
  display: block

.container
  height: 100%
  background-color: #e6f7ff

.header
  //width: 100%
  height: 15%
  background-color: #007ab3
  clear: both

.header-text
  font-size: 8vh

.nav-links-section
  display: none

.nav-link
  background-color: #66ccff
  margin: 4% auto 4% auto
  padding: 4%
  width: 50%
  min-width: 100px
  height: 40px
  line-height: 50%
  cursor: pointer
  width-transition-seconds(.5s)
  transition-timing-cybic-bezier(0,0,0,1)
  border-radius: 100px
  text-align: center
  vertical-align: middle
  border: 4px solid black;
  &:hover
    width: 100%

.nav-drop-down-section
  width: 100%

.nav-drop-down-select
  width: 100%

.nav-menu-mobile
  width: 100%
  background-color: yellow

.nav-menu-mobile.ng-enter
  nav-menu-mobile-transition(.5s)
  opacity: 0

.nav-menu-mobile.ng-enter.ng-enter-active
  opacity: 1

.nav-menu-mobile.ng-leave
  nav-menu-mobile-transition(.5s)
  opacity: 1

.nav-menu-mobile.ng-leave.ng-leave-active
  opacity: 0

.hamburger-menu:hover
  animation-name: moveHamburger
  animation-duration: 2s

@keyframes moveHamburger {
  0% { left: 0%; top: 0%}
  100% { left 100%; top: 0%}
}

.portfolio-full
  height: 100%

.project-content
  overflow-x: auto
  height: 90%

.content
  height: 100%

.content-box
  height: 80%

.project-button
  display: inline
  margin: 1% 1% 1% 1%
  &:hover
    cursor: pointer
  background-color: #66ccff
  padding: 1%
  margin: 1%

.footer
  background-color: #007ab3
  //width: 100%
  height: 15%
  clear: both

@import "stylesMediaQueries.styl"
